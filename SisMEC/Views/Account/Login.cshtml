@model LoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://kit.fontawesome.com/1ab94d0eba.js" crossorigin="anonymous"></script>
    <title>SisMecânica - Login</title>
    <link rel="stylesheet" href="~/css/login2.css">
</head>
<body>
    <main class="container">
        <center>
        <img src="~/images/logosis.png" alt="Logo SisMecânica" id="logo" width=300 height=100>
        </center>
        <h2 align="center">LOGIN</h2>
        <form asp-controller="Account" asp-action="Login" method="post" class="form-horizontal" role="form">
                        <div asp-validation-summary="All" class="text-danger" align="center"></div>
                        <input type="hidden" asp-for="ReturnUrl"/>
                        <div class="form-group input-field">
                            <div asp-for="UserName" class="col-md-2 control-label"></div>
                            <div class="col-md-6">
                                <input asp-for="UserName" class="form-control" id="username"  placeholder="Usuário"/>
                                <div class="underline"></div>
                            </div>
                        </div>
                        <div class="form-group input-field">
                            <div asp-for="Password" class="col-md-2 control-label"></div>
                            <br />
                            <div class="col-md-6">
                                <input asp-for="Password" class="form-control" id="password" placeholder="Senha"/>
                                <div class="underline"></div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-8">
                                <input type="submit" class="btn btn-success" value="Log in" />
                            </div>
                        </div>
        </form>
        <p>Ainda não possui login? <a asp-area="" asp-controller="Contatos" asp-action="Index">Entre em Contato</a></p>
